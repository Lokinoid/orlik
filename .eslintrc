{
    "env": {
        "browser": true,
        "amd": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "camelcase": 2,
        "comma-dangle": [2, "never"],
        "curly": 2,
        "eqeqeq": [2, "smart"],
        "guard-for-in": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "max-depth": [2, 2],
        "new-cap": [2, {
            "capIsNewExceptions": ["jasmine.Any"]
        }],
        "no-extra-semi": 2,
        "no-multi-spaces": 2,
        "no-multiple-empty-lines": [2, {"max": 1}],
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "quotes": [2, "single"], 
        "semi": [2, "always"],
        "space-after-keywords": [2, "always"],
        "space-before-keywords": [2, "always"],
        "space-infix-ops": 2,
        "strict": 2
    },
    "globals": {
        "requirejs": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "classes": true,
            "modules": true,
            "defaultParams": true
        }
    },
    "plugins": ["react"]
}